<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5mdp">

    <!--card-view-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100mdp"
        android:layout_marginHorizontal="@dimen/_10mdp"
        android:layout_marginTop="@dimen/_26mdp"
        app:cardBackgroundColor="@color/White_Smoke"
        app:cardCornerRadius="@dimen/_16mdp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--title-->
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_116mdp"
                android:layout_marginTop="@dimen/_12mdp"
                android:layout_marginEnd="@dimen/_4mdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="@style/TextAppearance_medium"
                android:textColor="@color/Charcoal_Gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/checkYourNetwork" />
            <!--rate_title-->
            <TextView
                android:id="@+id/rate_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:textAppearance="@style/TextAppearance_medium"
                android:textColor="@color/Charcoal_Gray"
                app:layout_constraintBottom_toBottomOf="@id/app_rating"
                app:layout_constraintStart_toStartOf="@id/txt_title"
                app:layout_constraintTop_toTopOf="@id/app_rating"
                tools:text="9.6"
                android:layout_marginEnd="@dimen/_4mdp"
             />
            <!--ratingbar-->
            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/app_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8mdp"
                android:layoutDirection="ltr"
                android:scaleX="0.6"
                android:theme="@style/myRateBar"
                android:numStars="5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_4mdp"
                app:layout_constraintStart_toStartOf="@id/txt_title"
                app:layout_constraintTop_toBottomOf="@id/txt_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <!--poster-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_poster"
        android:layout_width="@dimen/_95mdp"
        android:layout_height="@dimen/_104mdp"
        android:layout_margin="@dimen/_6mdp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/card_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/RoundImageViewProfile"
        tools:src="@tools:sample/backgrounds/scenic" />
</androidx.constraintlayout.widget.ConstraintLayout>