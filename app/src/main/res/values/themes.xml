<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Imdb" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Imdb" parent="Base.Theme.Imdb">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">true</item>
        <item name="materialAlertDialogTheme">@style/AlertDialog</item>
    </style>
    <!--TextSize||fontBold-->
    <style name="TextAppearance_Bold">
        <item name="android:textSize">@dimen/_14font_mdp</item>
        <item name="fontPath">fonts/roboto_bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--TextSize||fontMedium-->
    <style name="TextAppearance_medium">
        <item name="android:textSize">@dimen/_12font_mdp</item>
        <item name="fontPath">fonts/roboto_medium.ttf</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--TextSize||fontSmall-->
    <style name="TextAppearance_small">
        <item name="android:textSize">@dimen/_10font_mdp</item>
        <item name="fontPath">fonts/roboto_italic.ttf</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--Round ImageView-->
    <style name="RoundImageViewProfile">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>
    <style name="RoundImageViewBottom">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">14%</item>
        <item name="cornerSizeBottomRight">14%</item>
    </style>
    <!--MaterialDialog-->
    <style name="AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeDialog</item>
    </style>

    <style name="ShapeDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12%</item>
    </style>
    <!--Pink material button-->
    <style name="pinkMaterialButton" parent="ThemeOverlay.Material3.Button">
        <item name="backgroundTint">@color/Gold</item>
        <item name="cornerRadius">@dimen/_15mdp</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconStartPadding">@dimen/_6mdp</item>
        <item name="android:textSize">@dimen/_12font_mdp</item>
        <item name="android:inset">0dp</item>
    </style>
    <!--AppCompatRatingBar-->
    <style name="myRateBar" parent="Widget.AppCompat.RatingBar.Small">
        <!--non select star color-->
        <item name="android:colorControlNormal">#4D000000</item>
        <!--select star color-->
        <item name="colorControlActivated">@color/Gold</item>
    </style>
</resources>